{
  "name": "styled-markdown-pdf",
  "displayName": "Styled Markdown to PDF",
  "version": "1.0.0",
  "publisher": "BZHKylian",
  "description": "Export Markdown files to styled PDF with cover page and syntax highlighting",
  "icon": "media/icon.png",
  "main": "./out/extension.js",
  "type": "commonjs",
  "engines": {
    "vscode": "^1.85.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BZHKylian/Styled-Markdown-to-PDF"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:styledMdPdf.export.mdToPdf"
  ],
  "contributes": {
    "commands": [
      {
        "command": "styledMdPdf.export.mdToPdf",
        "title": "Export (PDF)",
        "category": "Styled Markdown to PDF"
      },
      {
        "command": "styledMdPdf.theme.toggleCodeBlock",
        "title": "Toggle Code Block Theme (Light / Dark)",
        "category": "Styled Markdown to PDF"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc --watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "highlight.js": "^11.10.0",
    "pdf-merger-js": "^5.1.1",
    "puppeteer": "^23.5.0",
    "showdown": "^2.1.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.4.2",
    "@types/showdown": "^2.0.6",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.6.2",
    "vscode-test": "^1.2.2",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "private": true
}